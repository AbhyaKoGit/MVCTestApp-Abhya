@model List<ProductModel>


<div class="container">
    <h2 class="text-center">Product List</h2>

    <a class="btn btn-primary" asp-action="Create">Add New</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductName</th>
                <th>CompanyName</th>
                <th>UnitPrice</th>
                <th>Package</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.CompanyName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Package</td>
                    <td>

                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a> |

                        <form asp-action="DeleteProduct" method="post">
                            <input type="submit" value="Delete" class="btn btn-danger" asp-action="DeleteProduct" asp-route-id="@item.Id" /> |
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>