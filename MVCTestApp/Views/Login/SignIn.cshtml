@model LoginModel

@{


}


<form method="post" asp-action="SignIn">
    <div class="container">
        <h2>Login Form</h2>
        <label for="usname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" asp-for="Username" name="Username" required>
        <span asp-validation-for="Username" class="text-danger"></span>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" asp-for="Password" name="Password" required>
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>
    <div class="container" style="background-color:#f1f1f1">
        <a type="button" class="btn btn-primary" asp-action="SignUp">Sign Up </a>
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
</form>